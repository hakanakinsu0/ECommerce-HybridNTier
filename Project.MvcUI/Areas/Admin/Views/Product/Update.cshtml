@model Project.MvcUI.Areas.Admin.Models.PageVms.CreateProductPageVm

<form asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data" class="p-3 w-75 m-auto">

    <input type="hidden" asp-for="Product.Id" />

    <div class="mb-3">
        <label>Ürün Adı</label>
        <input asp-for="Product.ProductName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Fiyat</label>
        <input asp-for="Product.UnitPrice" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label>Açıklama</label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Kategori</label>
        <select asp-for="Product.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "CategoryName"))" class="form-control">
            <option value="">Kategori seçiniz</option>
        </select>
    </div>

    <div class="mb-3">
        <label>Yeni Görsel (Opsiyonel)</label>
        <input type="file" name="formFile" class="form-control" />
    </div>

    @* Mevcut görseli göstermek isterseniz: *@
    @if (!string.IsNullOrEmpty(Model.Product.ImagePath))
    {
        <div class="mb-3">
            <label>Mevcut Görsel:</label><br />
            <img src="@Model.Product.ImagePath" alt="Ürün görseli" style="max-height:150px;" />
        </div>
    }

    <div class="mb-3">
        <button class="btn btn-warning">Ürünü Güncelle</button>
    </div>
</form>
