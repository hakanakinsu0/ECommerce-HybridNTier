@using Project.Entities.Models
@model Category

<form asp-action="Update" asp-controller="Category" method="post" class="p-3 w-75 m-auto">

    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label>Kategori ismi güncelleyiniz</label>
        <input asp-for="CategoryName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Acıklama güncelleyiniz</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-warning">Kategori güncelle</button>
    </div>
</form>
